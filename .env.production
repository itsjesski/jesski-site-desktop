# Digital Ocean Build Optimization Configuration

# Build Performance Settings
NODE_ENV=production
NODE_OPTIONS=--max-old-space-size=4096

# Vite Build Optimizations
VITE_BUILD_SOURCEMAP=false
VITE_BUILD_MINIFY=true
VITE_BUILD_CHUNK_SIZE_WARNING_LIMIT=1000

# Disable unnecessary features during build
GENERATE_SOURCEMAP=false
DISABLE_ESLINT_PLUGIN=true
SKIP_PREFLIGHT_CHECK=true

# Twitch Configuration
VITE_TWITCH_CHANNEL=jesski
VITE_API_BASE_URL=https://jesski-site-desktop-latest-pvg4k.ondigitalocean.app

# Build Caching
npm_config_cache=/tmp/.npm
npm_config_prefer_offline=true
npm_config_audit=false
npm_config_fund=false

# Parallel Processing
UV_THREADPOOL_SIZE=16
